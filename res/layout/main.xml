<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="@string/username"
    />
<EditText 
android:layout_width="match_parent" 
 android:id="@+id/txtName"
  android:layout_height="wrap_content"/>
  
<TextView android:text="@string/age" android:id="@+id/textView1" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
<EditText android:layout_width="match_parent" 

android:id="@+id/txtAge" 
android:layout_height="wrap_content"/>

<TextView android:text="@string/sex" 
android:id="@+id/textView2"
 android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
<EditText 
android:layout_width="match_parent" 
android:id="@+id/txtSex" 
android:layout_height="wrap_content"></EditText>
<TextView android:text="@string/email" android:id="@+id/textView3" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
<EditText
 android:layout_width="match_parent" 
 android:id="@+id/txtEmail"
  android:layout_height="wrap_content"></EditText>
<TextView android:text="@string/stuNo" android:id="@+id/textView4" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
<EditText android:layout_width="match_parent" 
 android:id="@+id/txtNo" android:layout_height="wrap_content"></EditText>
<Button android:text="开始解析" android:id="@+id/button1" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
</LinearLayout>
